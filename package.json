{
  "name": "electron-vue-vite",
  "version": "0.0.0",
  "main": "dist/electron/main/index.js",
  "description": "Electron + Vue + Vite boilerplate.",
  "author": "QJia <qianjia@huansi.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
    "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "git-cz",
    "prettier:comment": "自动格式化当前目录下的所有文件",
    "prettier": "prettier --write",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "dependencies": {
    "@vueuse/core": "^8.9.4",
    "axios": "^0.27.2",
    "element-plus": "^2.2.9",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "pinia": "^2.0.14",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/electron": "^1.6.10",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^16.11.43",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitejs/plugin-legacy": "^1.8.2",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.2",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.7",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.9.0",
    "dotenv": "^16.0.1",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.0.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "tailwindcss": "^3.1.6",
    "typescript": "~4.7.4",
    "vite": "^2.9.14",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-electron": "^0.8.0",
    "vite-plugin-html": "^2.1.2",
    "vite-plugin-purge-icons": "^0.8.1",
    "vite-plugin-style-import": "^1.3.0",
    "vite-plugin-svg-icons": "^1.1.0",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vitest": "^0.18.0",
    "vue-tsc": "^0.38.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,tsx}": [
      "npm run eslint",
      "npm run prettier"
    ]
  },
  "env": {
    "VITE_DEV_SERVER_HOST": "127.0.0.1",
    "VITE_DEV_SERVER_PORT": 9999
  },
  "keywords": [
    "electron",
    "rollup",
    "vite",
    "vue3",
    "vue"
  ]
}
